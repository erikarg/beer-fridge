{
  "name": "beer-fridge-api",
  "version": "1.0.0",
  "description": "A TypeScript REST API for managing a smart beer fridge system built with ExpressoTS, Prisma, and PostgreSQL",
  "author": {
    "name": "Érika Rocha Gonçalves",
    "email": "erikatrue@gmail.com",
    "url": "https://github.com/erikarg"
  },
  "license": "MIT",
  "private": false,
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/beer-fridge.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/beer-fridge/issues"
  },
  "homepage": "https://github.com/your-username/beer-fridge#readme",
  "keywords": [
    "typescript",
    "expressots",
    "prisma",
    "postgresql",
    "rest-api",
    "beer",
    "fridge",
    "iot",
    "nodejs",
    "express"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "expressots build",
    "start": "node dist/main.js",
    "dev": "expressots dev",
    "prod": "expressots prod",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('child_process').exec('husky install') }\"",
    "precommit": "lint-staged",
    "release": "standard-version",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@expressots/adapter-express": "3.0.0",
    "@expressots/core": "3.0.0",
    "@expressots/shared": "3.0.0",
    "@prisma/client": "^6.8.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@expressots/cli": "3.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "prisma": "^6.8.2",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "29.1.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.19.2",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}