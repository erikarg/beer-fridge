{
  "name": "beer-fridge-api",
  "version": "1.0.0",
  "description": "A TypeScript REST API for managing a smart beer fridge system built with ExpressoTS, Prisma, and PostgreSQL",
  "author": {
    "name": "Érika Rocha Gonçalves",
    "email": "erikatrue@gmail.com",
    "url": "https://github.com/erikarg"
  },
  "license": "MIT",
  "private": false,
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/erikarg/beer-fridge.git"
  },
  "bugs": {
    "url": "https://github.com/erikarg/beer-fridge/issues"
  },
  "homepage": "https://github.com/erikarg/beer-fridge#readme",
  "keywords": [
    "typescript",
    "expressots",
    "prisma",
    "postgresql",
    "rest-api",
    "beer",
    "fridge",
    "iot",
    "nodejs",
    "express"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "expressots build",
    "clean": "rimraf dist coverage",
    "dev": "expressots dev",
    "prisma:generate": "prisma generate",
    "prod": "expressots prod",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "docker:dev": "docker-compose up",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@expressots/adapter-express": "3.0.0",
    "@expressots/core": "3.0.0",
    "@expressots/shared": "3.0.0",
    "@prisma/client": "^6.8.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@expressots/cli": "3.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^6.8.2",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-jest": "29.1.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.1"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
